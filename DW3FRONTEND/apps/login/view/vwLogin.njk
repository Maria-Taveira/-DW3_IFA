<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
        <meta name="description" content=""/>
        <meta name="author" content=""/>
        <title>{{ title }}</title>
        <link href="/static/css/styles.css" rel="stylesheet"/>
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header">
                                        <h3 class="text-center font-weight-light my-4">Login Hospital</h3>
                                    </div>
                                    <div class="card-body">
                                        <form id="formLogin">
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="UserName" name="UserName" type="text" placeholder="Insira o username" required="required"/>
                                                <label for="UserName">Username*</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="Password" name="Password" type="password" placeholder="Password" required="required"/>
                                                <label for="Password">Password*</label>
                                            </div>
                                            <p id="mensagemErro" class="text-danger my-3"></p>
                                            
                                            <div class="d-flex align-items-center justify-content-center mt-4 mb-0">
                                                <button type="button" class="btn btn-primary" onclick="realizarLogin()">Login</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; DW3</div>
                            <div></div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        
        <script src="/static/js/5.3/bootstrap.bundle.min.js"></script>
        <script src="/static/js/jquery-3.7.1.slim.min.js"></script>
        <script src="/static/js/js.cookie.min.js"></script> 
        <script src="/static/js/validate-0.13.1.min.js"></script>
        <script src="/static/js/api.js"></script> </body>
</html>
<script>
    const urlBackend = 'http://localhost:40000'; 
    const form = document.getElementById('formLogin');
    const erroDisplay = document.getElementById('mensagemErro');

    window.onload = function () {
        localStorage.clear();
        Cookies.remove('isLogged');
        Cookies.remove('tempoInativoMaximoFront');
        document.getElementById('UserName').focus();
    };

    
    /**
     * Função principal de login: chama a API do Backend e salva o token no navegador.
     */
    async function realizarLogin() {
        
        const username = document.getElementById('UserName').value;
        const password = document.getElementById('Password').value;
        erroDisplay.textContent = '';
        
        try {
            const response = await fetch(`${urlBackend}/Login`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ UserName: username, Password: password })
            });

            const data = await response.json();

            if (response.ok && data.auth && data.token) {
                localStorage.setItem('dw3_token', data.token);
                localStorage.setItem('dw3_username', data.username);
                
                
                const sessionSet = await fetch('/Login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token: data.token, username: data.username })
                });

                if (sessionSet.ok) {
                    window.location.href = '/home'; 
                } else {
                    erroDisplay.textContent = 'Erro ao configurar a sessão do servidor.';
                }
                
            } else {
                erroDisplay.textContent = data.message || 'Credenciais inválidas. Tente novamente.';
            }
        } catch (error) {
            console.error('Erro de conexão:', error);
            erroDisplay.textContent = 'Não foi possível conectar ao servidor Backend (API).';
        }
    };
</script>